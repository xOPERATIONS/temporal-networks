{
    "compilerOptions": {
        "baseUrl": ".",
        "downlevelIteration": true,
        "esModuleInterop": true,
        "lib": [
            "ES2019",
            "DOM"
        ],
        "module": "ES6",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "paths": {
            "pkg/*": [
                "./pkg/*"
            ],
            "tmp/*": [
                "./tmp/*"
            ]
        },
        "sourceMap": true,
        "target": "ES6",
    },
    "include": [
        "lib",
        "pkg"
    ],
    "exclude": [
        "node_modules",
        "tmp"
    ]
}
